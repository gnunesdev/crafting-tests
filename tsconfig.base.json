{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@crafting-tests/modules/courses/testing-javascript/fundamental": [
        "modules/courses/testing-javascript/fundamental/src/index.ts"
      ],
      "@crafting-tests/modules/courses/testing-javascript/mocking": [
        "modules/courses/testing-javascript/mocking/src/index.ts"
      ],
      "@crafting-tests/modules/shared/custom-runner": [
        "modules/shared/custom-runner/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
